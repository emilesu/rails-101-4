<div class="col-md-12">

  <h2 class="text-center">我的文章</h2>

  <table class="table">
    <thead>
      <tr>
        <th>文章内容</th>
        <th>所属讨论组</th>
        <th>最后修改时间</th>
        <th colspand="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.group.title %></td>
          <td><%= post.updated_at %></td>
          <td><%= link_to("编辑", edit_group_path(post.group, post), class: "btn btn-default btn-xs") %></td>
          <td><%= link_to("删除", group_post_path(post.group, post), method: :delete, data: { confirm:"你确定要删除文章吗？"}, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
